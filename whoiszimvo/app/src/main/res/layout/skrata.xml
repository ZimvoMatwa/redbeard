<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userName"
        style="@style/userNameStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/userOfUser"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/profileAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layoutMargin"
        android:contentDescription="@string/userProfileAvatar"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/glowingStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/userProfileLevel"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ScrollView
        android:id="@+id/bioScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding"
            android:paddingEnd="@dimen/padding">

            <TextView
                android:id="@+id/heading"
                style="@style/userNameStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artistBio" />

            <ImageView
                android:id="@+id/artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/artistImage"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/lyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/lyrics" />

            <TextView
                android:id="@+id/heading2"
                style="@style/userNameStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artistBioo2" />

            <TextView
                android:id="@+id/lyrics2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lyrics2" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>